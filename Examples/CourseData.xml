<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Course information for an event, including course assignments to relay teams.
  To make the document more compact, Course and Control elements are placed in the References element at the end of the file, 
  and such elements occurring elsewhere are just holding a reference to these elements using the idref attribute.
-->
<CourseData xmlns="http://www.orienteering.org/datastandard/3.0"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            iofVersion="3.0"
            createTime="2011-07-20T12:16:31+01:00"
            creator="Example Software">
  <Event>
    <Name>Example event</Name>
  </Event>

  <CourseClassData>
    <!-- a course group is a container for a number of courses -->
    <!-- if a class uses multiple courses, place all these courses inside the same course group -->
    <!-- if a class uses a single course, the course group will contain only this course  -->
    <CourseGroup>
      <Name>Open</Name>
      <!-- this course group contains three courses -->
      <Course idref="1"/>
      <Course idref="2"/>
      <Course idref="3"/>
    </CourseGroup>
    <!-- the class(es) using the course(s) in the course group -->
    <Class>
      <Id>1</Id>
      <Name>Men Open</Name>
    </Class>
    <Class>
      <Id>2</Id>
      <Name>Women Open</Name>
    </Class>
  </CourseClassData>

  <!-- assigning courses to a relay team -->
  <TeamCourseCombination>
    <!-- the identifier of the team, known by both systems exchanging data -->
    <TeamId>1</TeamId>
    <!-- the course assigned to the competitior running the first leg for the team -->
    <CourseAssignment>
      <BibNumber>101</BibNumber>
      <Leg>1</Leg>
      <Course idref="1"/>
    </CourseAssignment>
    <!-- the course assigned to the competitior running the second leg for the team -->
    <CourseAssignment>
      <BibNumber>101</BibNumber>
      <Leg>1</Leg>
      <Course idref="2"/>
    </CourseAssignment>
    <!-- the course assigned to the competitior running the third leg for the team -->
    <CourseAssignment>
      <BibNumber>101</BibNumber>
      <Leg>1</Leg>
      <Course idref="3"/>
    </CourseAssignment>
  </TeamCourseCombination>

  <!-- assigning courses to another relay team -->
  <TeamCourseCombination>
    <TeamId>2</TeamId>
    <CourseAssignment>
      <BibNumber>102</BibNumber>
      <Leg>1</Leg>
      <Course idref="3"/>
    </CourseAssignment>
    <CourseAssignment>
      <BibNumber>102</BibNumber>
      <Leg>2</Leg>
      <Course idref="1"/>
    </CourseAssignment>
    <CourseAssignment>
      <BibNumber>102</BibNumber>
      <Leg>2</Leg>
      <Course idref="2"/>
    </CourseAssignment>
  </TeamCourseCombination>
  
  
  <References>
    <!-- all courses are listed here -->
    <Course>
      <Id>1</Id>
      <Name>Open A</Name>
      <!-- course length in meters -->
      <Length>1770</Length>
      <!-- course climb in meters -->
      <Climb>45</Climb>
      <!-- ordered sequence of controls, including start and finish -->
      <CourseControl type="Start">
        <Control idref="S"/>
        <!-- for the start, LegLength is the length in meters from the time start to the start flag -->
        <LegLength>50</LegLength>
      </CourseControl>
      <CourseControl type="Control">
        <Control idref="31"/>
        <!-- the text printed next to the control circle, usually the control number -->
        <MapText>1</MapText>
        <!-- the center of the text relative to the center of the control circle -->
        <MapTextPosition unit="mm" x="-15" y="8"/>
        <!-- the length in meters from the previous control to this control -->
        <LegLength>410</LegLength>
      </CourseControl>
      <CourseControl type="Control">
        <Control idref="32"/>
        <MapText>2</MapText>
        <MapTextPosition unit="mm" x="11" y="-14"/>
        <LegLength>360</LegLength>
      </CourseControl>
      <CourseControl type="Control">
        <Control idref="100"/>
        <MapText>3</MapText>
        <MapTextPosition unit="mm" x="-12" y="12"/>
        <LegLength>800</LegLength>
      </CourseControl>
      <CourseControl type="Finish" >
        <Control idref="F"/>
        <LegLength>150</LegLength>
      </CourseControl>
    </Course>
    <Course>
      <Id>2</Id>
      <Name>Open B</Name>
      <Length>1770</Length>
      <Climb>45</Climb>
      <CourseControl type="Start">
        <Control idref="S"/>
        <LegLength>50</LegLength>
      </CourseControl>
      <CourseControl type="Control">
        <Control idref="31"/>
        <MapText>1</MapText>
        <MapTextPosition unit="mm" x="-15" y="8"/>
        <LegLength>410</LegLength>
      </CourseControl>
      <CourseControl type="Control">
        <Control idref="33"/>
        <MapText>2</MapText>
        <MapTextPosition unit="mm" x="11" y="-14"/>
        <LegLength>360</LegLength>
      </CourseControl>
      <CourseControl type="Control">
        <Control idref="100"/>
        <MapText>3</MapText>
        <MapTextPosition unit="mm" x="-12" y="12"/>
        <LegLength>800</LegLength>
      </CourseControl>
      <CourseControl type="Finish" >
        <Control idref="F"/>
        <LegLength>150</LegLength>
      </CourseControl>
    </Course>
    <Course>
      <Id>3</Id>
      <Name>Open C</Name>
      <Length>1750</Length>
      <Climb>45</Climb>
      <CourseControl type="Start">
        <Control idref="S"/>
        <LegLength>50</LegLength>
      </CourseControl>
      <CourseControl type="Control">
        <Control idref="31"/>
        <MapText>1</MapText>
        <MapTextPosition unit="mm" x="-15" y="8"/>
        <LegLength>410</LegLength>
      </CourseControl>
      <CourseControl type="Control">
        <Control idref="34"/>
        <MapText>2</MapText>
        <MapTextPosition unit="mm" x="11" y="-14"/>
        <LegLength>340</LegLength>
      </CourseControl>
      <CourseControl type="Control">
        <Control idref="100"/>
        <MapText>3</MapText>
        <MapTextPosition unit="mm" x="-12" y="12"/>
        <LegLength>800</LegLength>
      </CourseControl>
      <CourseControl type="Finish" >
        <Control idref="F"/>
        <LegLength>150</LegLength>
      </CourseControl>
    </Course>

    <!-- all controls are listed here -->
    <!-- use the control code as id for normal controls, and for example 'S' and 'F' for start and finish -->
    <Control>
      <Id>S</Id>
      <!-- the position of the control given in latitude and longitude -->
      <!-- coordinates west of the Greenwich meridian and south of the equator are expressed by negative numbers -->
      <Position lat="59.760069" lng="17.687623"/>
      <!-- the position of the control on the printed map, relative to the map's lower left corner -->
      <MapPosition unit="mm" x="187" y="58"/>
    </Control>
    <Control>
      <Id>31</Id>
      <Position lat="59.763947" lng="17.685403"/>
      <MapPosition unit="mm" x="252" y="118"/>
    </Control>
    <Control>
      <Id>32</Id>
      <Position lat="59.762947" lng="17.680439"/>
      <MapPosition unit="mm" x="82" y="102"/>
    </Control>
    <Control>
      <Id>33</Id>
      <Position lat="59.761009" lng="17.687941"/>
      <MapPosition unit="mm" x="99" y="245"/>
    </Control>
    <Control>
      <Id>34</Id>
      <Position lat="59.75820" lng="17.685711"/>
      <MapPosition unit="mm" x="154" y="49"/>
    </Control>
    <Control>
      <Id>35</Id>
      <Position lat="59.758434" lng="17.687778"/>
      <MapPosition unit="mm" x="202" y="167"/>
    </Control>
    <Control>
      <Id>100</Id>
      <Position lat="59.761130" lng="17.684938"/>
